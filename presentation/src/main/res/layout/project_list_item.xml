<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="ProjectsListItemBinding">

        <import type="com.annevonwolffen.behancer.utils.DateUtils" />

        <import type="com.annevonwolffen.behancer.utils.StringUtils" />

        <variable
            name="project"
            type="com.annevonwolffen.domain.Project" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_small">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:importantForAccessibility="no"
            app:imageUrl="@{project.coverUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@{project.name}"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Logos" />

        <TextView
            android:id="@+id/project_owner"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:text="@{project.ownerNames.size() > 1 ? @string/few_owners : project.ownerNames.empty ? StringUtils.EMPTY : project.ownerNames[0]}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/project_name"
            app:layout_constraintTop_toBottomOf="@id/project_name"
            tools:text="Some username" />

        <TextView
            android:id="@+id/publish_date"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:text="@{DateUtils.formatLongToString(project.publishDate)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/project_name"
            tools:text="05.05.2021" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>